---
import PostCard from "../../components/PostCard.astro";
import { formatBlogPosts, slugify } from "../../js/utils";
import MainLayout from "../../layouts/MainLayout.astro";

export async function getStaticPaths() {
  return formatBlogPosts(await Astro.glob("../blog/*.md"))
    .map((post) => {
      return post.frontmatter.category;
    })
    .map((post) => {
      return {
        params: {
          category: slugify(post),
        },
        props: { name: post },
      };
    });
}

const { category } = Astro.params;
const { name } = Astro.props;

const allPosts = await Astro.glob("../blog/*.md");
const formattedPosts = formatBlogPosts(allPosts, {
  limit: 3,
}).filter((post) => post.frontmatter.category === name);
---

<MainLayout title="My Blog">
  <section class="container" aria-label={`Posts about ${name}`}>
    <h2 class="h1">Posts about <span>{name}</span></h2>
    <div class="post-container">
      {
        formattedPosts.map((post) => (
          <PostCard
            frontmatter={post.frontmatter}
            url={post.url}
            tagType="h3"
          />
        ))
      }
    </div>
  </section>
</MainLayout>
