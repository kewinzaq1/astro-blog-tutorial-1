---
import Link from "./Link.astro";

interface Props {
  prevUrl: string;
  nextUrl: string;
  currentPage: string | number;
}

const { prevUrl, nextUrl, currentPage } = Astro.props;
---

<nav aria-label="Blog pages">
  {
    prevUrl && (
      <Link
        text="Previous"
        style="primary"
        href={prevUrl}
        borderVisible
        isFilled={false}
        icon={{
          name: "tabler:arrow-big-left-line",
          side: "left",
        }}
      />
    )
  }
  {currentPage > 1 && <span class="h2">{currentPage}</span>}
  {
    nextUrl && (
      <Link
        text="Next"
        style="primary"
        href={nextUrl}
        borderVisible
        isFilled={false}
        icon={{
          name: "tabler:arrow-big-right-line",
          side: "right",
        }}
      />
    )
  }
</nav>
